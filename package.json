{
    "name": "vscode-lua-vu",
    "displayName": "Venice Unleashed (Lua)",
    "description": "A Visual Studio Code extension for Venice Unleashed Lua functionality",
    "version": "0.2.2",
    "publisher": "Imposter",
    "icon": "logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/Imposter/vscode-lua-vu"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.33.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onCommand:imposter.vu.lua.showMenu",
        "onLanguage:lua"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "imposter.vu.lua.showMenu",
                "title": "VU.Lua Commands"
            }
        ],
        "languages": [
            {
                "id": "lua",
                "aliases": [
                    "Lua"
                ],
                "extensions": [
                    ".lua"
                ]
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "demoLanguageServer.maxNumberOfProblems": {
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "demoLanguageServer.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VSCode and the demoLanguageServer service."
                }
            }
        }
    },
    "extensionDependencies": [
        "sumneko.lua",
        "mindaro-dev.file-downloader"
    ],
    "scripts": {
        "build": "npm run-script compile_grammar && npm run-script compile",
        "compile_grammar": "cd src/code-gen/parser && antlr4ts -listener LuaLexer.g4 LuaParser.g4 -o generated",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "test": "mocha --require ts-node/register --timeout 3600000 test/**/*.test.ts"
    },
    "devDependencies": {
        "@microsoft/vscode-file-downloader-api": "^1.0.1",
        "@types/fs-extra": "^9.0.6",
        "@types/glob": "^7.1.3",
        "@types/js-yaml": "^4.0.0",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.9.2",
        "@types/throttle-debounce": "^2.1.0",
        "@types/vscode": "^1.43.0",
        "antlr4ts-cli": "^0.5.0-alpha.4",
        "mocha": "^7.1.1",
        "tslint": "^6.1.0",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "@types/squirrelly": "^7.1.1",
        "antlr4ts": "^0.5.0-alpha.4",
        "blueimp-tmpl": "^3.19.0",
        "fs-extra": "^9.0.1",
        "glob": "^7.1.6",
        "js-yaml": "^4.0.0",
        "recursive-copy": "^2.0.11",
        "throttle-debounce": "^3.0.1",
        "vscode-languageclient": "^6.1.3"
    }
}
